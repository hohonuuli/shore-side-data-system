<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="348" height="326">
	<mx:VBox x="0" y="0" width="100%" height="100%">
		<mx:Form x="0" y="0" width="100%" height="100%">
			<mx:FormHeading label="New Device"/>
			<mx:FormItem label="Name">
				<mx:TextInput/>
			</mx:FormItem>
			<mx:FormItem label="Description">
				<mx:TextInput/>
			</mx:FormItem>
			<mx:FormItem label="Manufacturer Name">
				<mx:ComboBox editable="true"></mx:ComboBox>
			</mx:FormItem>
			<mx:FormItem label="Model">
				<mx:TextInput/>
			</mx:FormItem>
			<mx:FormItem label="Serial Number">
				<mx:TextInput/>
			</mx:FormItem>
			<mx:FormItem label="Person Responsible">
				<mx:ComboBox></mx:ComboBox>
			</mx:FormItem>
			<mx:FormItem label="Device Type">
				<mx:ComboBox></mx:ComboBox>
			</mx:FormItem>
		</mx:Form>
		<mx:HBox width="100%">
			<mx:Button id="saveButton" label="Save"/>
			<mx:Button id="cancelButton" label="Cancel"/>
		</mx:HBox>
	</mx:VBox>
</mx:TitleWindow>
